<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/userRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FFF72D13">
        <ImageView
            android:id="@+id/headIvIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_default_user_head"/>
        <TextView
            android:id="@+id/userNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:textColor="#FFF5F5F5"
            android:text="点击登录"
            android:textSize="16sp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFAE210F"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_collection_goods"
            android:gravity="center"
            android:textColor="#FFF5F5F5"
            android:text="商品:0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_collection_store"
            android:gravity="center"
            android:textColor="#FFF5F5F5"
            android:text="店铺:0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_footprint"
            android:gravity="center"
            android:textColor="#FFF5F5F5"
            android:text="我的足迹"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FFD9D5D5"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="全部订单"
        android:drawableLeft="@mipmap/ic_user_order"
        android:drawablePadding="8dp"
        android:padding="10dp"
        android:textColor="#000"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFD9D5D5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_order_wait_pay"
            android:gravity="center"
            android:textSize="12sp"
            android:text="未付款"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_order_wait_pay"
            android:gravity="center"
            android:textSize="12sp"
            android:text="代发货"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_order_wait_pay"
            android:gravity="center"
            android:textSize="12sp"
            android:text="待收货"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_order_wait_pay"
            android:gravity="center"
            android:textSize="12sp"
            android:text="待评价"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_order_wait_pay"
            android:gravity="center"
            android:textSize="12sp"
            android:text="退货/款"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FFD9D5D5"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的财产"
        android:drawableLeft="@mipmap/ic_user_property"
        android:drawablePadding="8dp"
        android:padding="10dp"
        android:textColor="#000"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFD9D5D5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_property_money"
            android:gravity="center"
            android:textSize="12sp"
            android:text="预存款"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_property_card"
            android:gravity="center"
            android:textSize="12sp"
            android:text="充值卡"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_property_vouchers"
            android:gravity="center"
            android:textSize="12sp"
            android:text="代金券"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_property_red"
            android:gravity="center"
            android:textSize="12sp"
            android:text="红包"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_property_integral"
            android:gravity="center"
            android:textSize="12sp"
            android:text="积分"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FFD9D5D5"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="收货地址"
        android:drawableLeft="@mipmap/ic_user_address"
        android:drawablePadding="8dp"
        android:padding="10dp"
        android:textColor="#000"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFD9D5D5"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="系统设置"
        android:drawableLeft="@mipmap/ic_user_setting"
        android:drawablePadding="8dp"
        android:padding="10dp"
        android:textColor="#000"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFD9D5D5"/>

</LinearLayout>