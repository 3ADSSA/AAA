<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#FFEC530C"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@mipmap/ic_normal_code"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/main_edittext_shape"
            android:text="搜索一下"
            android:textColor="#FFE1E2E1"
            android:gravity="center"
            android:padding="5dp"
            android:layout_gravity="center"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@mipmap/ic_normal_message"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#fff"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/goodsListTvTaxis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="综合排序"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="14sp"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/goodsListTvVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="销量优先"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="14sp"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/goodsListTvScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="筛选"
            android:gravity="center"
            android:textColor="#ff0000"
            android:textSize="14sp"
            android:padding="5dp"/>
        <ImageView
            android:id="@+id/goodsListIvicon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1.5"
            android:src="@mipmap/ic_goods_list_ver"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/goodsListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>