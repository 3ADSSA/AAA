<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/topLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#FFEC530C"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@mipmap/ic_action_back"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="商品详情"
            android:textColor="#FFFFFFFF"
            android:padding="5dp"
            android:layout_gravity="center"
            android:textSize="18sp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@mipmap/ic_collection_goods"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@mipmap/ic_action_share"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topLinearLayout"
        android:layout_above="@+id/bottomLinearLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/goodsDetailsIvIcon"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>
            <TextView
                android:id="@+id/goodsDetailsTvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="2"
                android:textColor="#000"
                android:padding="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/goodsDetailsTvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f00000"
                    android:padding="8dp"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/goodsDetailsTvSold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFD9D7D7"/>
            <TextView
                android:id="@+id/goodsDetailsTvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:padding="8dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FFD9D7D7"/>
            <TextView
                android:id="@+id/goodsDetailsTvAssess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:padding="8dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FFD9D7D7"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品介绍"
                android:textColor="#000"
                android:padding="8dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FFD9D7D7"/>
            <TextView
                android:id="@+id/goodsDetailsTvShopp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:drawablePadding="8dp"
                android:drawableLeft="@mipmap/ic_goods_store"
                android:textColor="#000"
                android:padding="8dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFD9D7D7"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="描述：5.0分"
                    android:padding="5dp"/>
                <View
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:background="#ff0000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务：5.0分"
                    android:padding="5dp"/>
                <View
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:background="#ff0000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物流：5.0分"
                    android:padding="5dp"/>
                <View
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:background="#ff0000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#FFCECBCB"
                android:orientation="horizontal">
                <View
                    android:layout_width="5dp"
                    android:layout_height="30dp"
                    android:background="#ff0000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="店铺推荐"
                    android:textSize="14sp"
                    android:padding="5dp"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/goodsDetailsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/goodsDetailsTvService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_goods_kefu"
            android:text="客服"/>
        <TextView
            android:id="@+id/goodsDetailsTvShoppingCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_goods_cart"
            android:text="购物车"/>
        <TextView
            android:id="@+id/goodsDetailsTvAddShoppintCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="2"
            android:background="#FFEC530C"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:drawableTop="@mipmap/ic_collection_goods"
            android:text="加入购物车"/>
        <TextView
            android:id="@+id/goodsDetailsTvBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="2"
            android:background="#ff0000"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:drawableTop="@mipmap/ic_collection_store"
            android:text="立即购买"/>
    </LinearLayout>

</RelativeLayout>